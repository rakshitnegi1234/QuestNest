<%layout("/Layouts/boilerplate")-%>

<body>
     <div class="row mt-3">
        <div class="col-6 offset-3">
            <form action="/signup" method = "POST" class="needs-validation" novalidate>

                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" name="username" id="username" class="form-control"  required>
                    <div class="valid-feedback">Perfect!</div>
                    <div class="invalid-feedback">Enter Username!</div>
                  </div>

                  <div class="mb-3">
                    <label for="email" class="form-label">email</label>
                    <input type = "email" name="email" id="email" class="form-control" required></input>
                    <div class="valid-feedback">Perfect!</div>
                    <div class="invalid-feedback">Enter Email!</div>
                  </div>

                  <div class="mb-3">
                    <label for="password" class="form-label">password</label>
                    <input type = "password" name="password" id="description" class="form-control" required></input>
                    <div class="valid-feedback">Perfect!</div>
                    <div class="invalid-feedback">Enter Password!</div>
                  </div>
                  <button type="submit" class="btn btn-success">Sign Up</button>
            </form>


        </div>
     </div>

</body>