<%layout("/Layouts/boilerplate")-%>
<body>
    <div class="page-wrapper">
        <h1><u>Listings:</u></h1>

        <div id="filters">
            <a class="anchor" href="/Rooms">
                <div class="filter">
                    <i class="fa-solid fa-bed f11 "></i>
                    <p>Rooms</p>
                </div>
            </a>
            <a href="/Mountains" class="anchor">
                <div class="filter">
                    <i class="fa-solid fa-mountain-city"></i>
                    <p>Mountains</p>
                </div>
            </a>
            <a href="/Beaches" class="anchor">
                <div class="filter">
                    <i class="fa-solid fa-umbrella-beach"></i>
                    <p>Beaches</p>
                </div>
            </a>

            <div class="tax-toggle">
                <div class="form-check-reverse form-switch">
                    <label class="form-check-label" for="flexSwitchCheckDefault">Display Taxes</label>
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                </div>
            </div>
        </div>

        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% for (let val of data) { %>
            <a href="/Listings/<%=val._id%>" class="list-link">
                <div class="card">
                    <img class="card-img-top" src="<%=val.image.url%>" alt="listing image" style="height: 22rem;">
                    <div class="card-body">
                        <p class="card-text">
                            <b><%=val.title%></b><br> &#8377;<%=val.price.toLocaleString("en-IN")%>/night
                            <i class="gst"> &nbsp; &nbsp; +18%GST</i>
                        </p>
                    </div>
                </div>
            </a>
            <% } %>
        </div>
    </div>

  
</body>
